<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Display CRUD</title>
        <style>
            table,
            th,
            td {
                border: 1px solid black;
                border-collapse: collapse;
            }
            .btn-edit, .btn-delete{
                padding: 5px 20px;
                margin: 5px;
                background-color: aqua;
                border: none;
                color: brown;
                border-radius: 25px;
                cursor: pointer;
                display: inline-block;
            }
            .btn-edit:hover, .btn-delete:hover{
                background-color: red;
                color: chartreuse;
            }
        </style>
    </head>
    <body>
        <table style="width: 100%">
            <tr>
                <th>Email</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
            <tr>                
                <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <td><%= data[i].email %></td>
                        <td><%= data[i].firstName %></td>
                        <td><%= data[i].lastName %></td>
                        <td><%= data[i].address %></td>
                        <td>
                            <a href="/edit-crud?id=<%= data[i].id %>" class="btn-edit">Edit</a>
                            <a href="/delete-crud?id=<%= data[i].id %>" class="btn-delete">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tr>
        </table>
    </body>
</html>
